{
  "name": "specialization_at_js_scenarios",
  "type": "module",
  "description": "Automated test scenarios for specialization project using WebdriverIO and Cucumber.",
  "author": "Eliana MÃ©ndez",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/cucumber-framework": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "axios": "^1.13.2"
  },
  "scripts": {
    "test": "wdio run ./src/config/wdio.conf.js",
    "test:register": "wdio run ./src/config/wdio.conf.js --spec ./src/features/f1_user_registration.feature",
    "test:login": "wdio run ./src/config/wdio.conf.js --spec ./src/features/f2_user_login.feature",
    "test:validLogin": "wdio run ./src/config/wdio.conf.js --spec ./src/features/f2_user_login.feature --cucumberOpts.tagExpression='@validLogin'",
    "test:invalidLogin": "wdio run ./src/config/wdio.conf.js --spec ./src/features/f2_user_login.feature --cucumberOpts.tagExpression='@invalidLogin'",
    "report": "allure generate allure-results --clean -o allure-report && allure open"
  },
  "engines": {
    "node": "18.20.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
